# Load global and local NeoSorcerer config
[[ -f /etc/sorcery.conf ]] && source /etc/sorcery.conf
[[ -f "$HOME/.sorcery/sorcery.local.conf" ]] && source "$HOME/.sorcery/sorcery.local.conf"
#!/usr/bin/env zsh
PACKAGE=$1
MANIFEST="var/installed/$PACKAGE.manifest"
if [[ ! -f "$MANIFEST" ]]; then
  echo "No manifest found for $PACKAGE"
  exit 1
fi
while read -r file; do
  sudo rm -vf "$file"
done < "$MANIFEST"
rm -f "$MANIFEST" "var/installed/$PACKAGE.version"
