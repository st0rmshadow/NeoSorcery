#!/usr/bin/env zsh
PACKAGE="$1"
MANIFEST="var/installed/$PACKAGE.manifest"

if [[ -z "$PACKAGE" ]]; then
  echo "Error: No package name provided." >&2
  exit 1
fi

if [[ ! -f "$MANIFEST" ]]; then
  echo "Error: No manifest found for \"$PACKAGE\". Nothing to dispel." >&2
  exit 1
fi

while read -r file; do
  sudo rm -vf "$file"
done < "$MANIFEST"
rm -f "$MANIFEST" "var/installed/$PACKAGE.version"
