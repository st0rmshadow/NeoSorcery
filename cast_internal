#!/usr/bin/env zsh
SPELL_NAME="$1"
SPELL_DIR="./spells/$SPELL_NAME"
if [[ ! -d "$SPELL_DIR" ]]; then
  echo "Error: Spell \"$SPELL_NAME\" does not exist in spells directory."
  exit 1
fi
if [[ ! -f "$SPELL_DIR/SPELL" ]]; then
  echo "Error: SPELL metadata missing for \"$SPELL_NAME\"."
  exit 1
fi
# previous content would go here...
